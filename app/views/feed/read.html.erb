<% if @item %>
<h3> This article will take you <%= @item.time_to_read %> minutes to read | <%= link_to 'Skip article', skip_article_path(:list_item_id => @item.item_id)%> | <%= link_to 'Get new article without skipping', :controller => 'feed', :action => 'read' %> | <%= link_to 'Archive article', archive_path(:list_item_id => @item.item_id)%></h4>
<%= link_to @item.given_url, @item.given_url, :target => "_blank" %>

  <% if @can_display_article %>
    <iframe
      height="100%"
      width="100%"
      frameborder="0" style="border:0"
      src="<%= @item.given_url %>"
    >
  <% else %>
    <!-- clean this up eventually -->
    <br/>
    We cannot display this article! Click the above link to read.
  <%end%>
<% end %>
